[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[push]
	autoSetupRemote = true
[core]
	editor = nvim
  autocrlf = input
  pager = delta
[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    
    side-by-side = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
